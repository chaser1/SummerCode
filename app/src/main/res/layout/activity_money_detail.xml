<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guru.pa.MoneyDetail"
    android:orientation="vertical">

    <TextView
        android:id="@+id/money_detail_date"
        android:textSize="16dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="#1abc9c"
        android:hint="年-月-日"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.2"
        android:layout_height="0dp">

        <LinearLayout
            android:background="#16a085"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:text="支出"
                android:textSize="22dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_weight="0.6"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/money_detail_expend"
                android:text="￥ 0"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_weight="0.4"
                android:layout_height="0dp" />
        </LinearLayout>

        <LinearLayout
            android:background="#16a085"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent" >

            <TextView
                android:text="收入"
                android:textSize="22dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_weight="0.6"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/money_detail_income"
                android:text="￥ 0"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_weight="0.4"
                android:layout_height="0dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/money_detail_expend_purpose"
        android:text="支出目的：     "
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_weight="0.2"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/money_detail_income_res"
        android:text="收入来源：     "
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_weight="0.2"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/money_detail_income_backup"
        android:text="备注：     "
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_weight="0.2"
        android:layout_height="0dp" />
</LinearLayout>
